<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:Hixon.Pages"
            x:Class="Hixon.Pages.MainPage">
    <TabbedPage.Children>
        <NavigationPage Title="Home Page">
            <x:Arguments>
                <views:HomePage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Hixon Group Website">
            <x:Arguments>
                <views:HixonGroupPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Hixon Group Support">
            <x:Arguments>
                <views:ZendeskSupportWeb />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>